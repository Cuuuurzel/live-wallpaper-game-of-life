package com.cuuuurzel.gollivewallpaper;

import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectOutputStream;

import android.app.Activity;
import android.os.Bundle;
import android.os.Environment;
import android.view.View;
import android.widget.TextView;

public class GolSettings extends Activity {
	
	int rows=3, cols=3;
	
	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView( R.layout.settings );
		setLabelText();
	}

	public void incRows( View v ) { this.rows++; setLabelText(); }
	public void incCols( View v ) { this.cols++; setLabelText(); }
	public void decRows( View v ) {
		if ( rows > 3 ) { this.rows--; } 
		setLabelText(); }
	public void decCols( View v ) { 
		if ( cols > 3 )	{ this.cols--; } 
		setLabelText(); 
	}
	
	public void setLabelText() {
		TextView l = (TextView) findViewById( R.id.txvGridSize );
		l.setText( rows + " x " + cols );
	}
	
	public void showGrid( View v ) {
    	Intent intentMain = new Intent( 
    			                        GolSettings.this, 
                						GolSettingsGrid.class 
                				      );
    	MainActivity.this.startActivityForResult( intentMain, ADD_DRINK_ACTIVITY );
	}
	
	/**
	 * Save a file to the path.
	 * File format :
	 * n of rows, n of columns[, rowN, colM, rowX, colY, ...]
	 * Where the cells indicated are active. 
	 *//*
	public void saveConfig( View v ) {
		try {			
			GolSwitcherGrid grid = getGrid();
			ObjectOutputStream out = new ObjectOutputStream( 
				new FileOutputStream( 
					Environment.getExternalStorageDirectory().getAbsolutePath() + "/" + path 
				) 
			);
			
			out.writeInt( grid.rows() );
			out.writeInt( grid.cols() );
			for ( int r=0; r<grid.rows(); r++ ) {
				for ( int c=0; c<grid.cols(); c++ ) {
					if ( grid.isAlive( r, c ) ) {
						out.writeInt( r );
						out.writeInt( c );
					}
				}
			}
		} catch ( IOException e ) {			
			System.out.println( e.getMessage() );
		}
	}*/
}