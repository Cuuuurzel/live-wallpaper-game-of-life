package com.cuuuurzel.gollivewallpaper;

import android.os.Bundle;
import android.preference.PreferenceActivity;
import android.text.Editable;
import android.text.TextWatcher;
import android.widget.EditText;

public class GolSettings extends PreferenceActivity {
	
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView( R.layout.settings );
        
        //Setting up a listener for text events...
        TextWatcher tw = new TextWatcher() {
            public void afterTextChanged( Editable s ) {
                onSizeChange( s.toString() );
            }
            public void beforeTextChanged(CharSequence s, int start, int count, int after){}
            public void onTextChanged(CharSequence s, int start, int before, int count){}
        };
        EditText edtRows = (EditText) findViewById( R.id.edtRows );
        edtRows.addTextChangedListener( tw ); 
        EditText edtCols = (EditText) findViewById( R.id.edtRows );
        edtCols.addTextChangedListener( tw ); 
    }
    
    public void onSizeChange( String s ) {
    	int r=0, c=0;
    	GolSwitcherGrid gsg = (GolSwitcherGrid) findViewById( R.id.golgrid );
    	gsg.setSize( r, c );
    	gsg.invalidate();    	
    }
}